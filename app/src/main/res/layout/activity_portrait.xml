<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBracketLeft"
            android:layout_width="1dp"
            android:layout_height="50dp"
            style="@style/UpSpecialButton"
            android:text="("
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBracketRight"
            android:layout_width="1dp"
            android:layout_height="50dp"
            style="@style/UpSpecialButton"
            android:text=")"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCaret"
            android:layout_width="1dp"
            android:layout_height="50dp"
            style="@style/UpSpecialButton"
            android:text="^"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSqrt"
            android:layout_width="1dp"
            android:layout_height="50dp"
            style="@style/UpSpecialButton"
            android:text="√"
            />
<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/btn4"-->
<!--            android:layout_width="1dp"-->
<!--            android:layout_height="match_parent"-->
<!--            style="@style/UpSpecialButton"-->
<!--            android:textSize="30sp"-->
<!--            android:text="rad" />-->

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnDelete"
            style="@style/UpSpecialButton"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:contentDescription="none"
            android:src="@drawable/backspace"
            android:scaleType="fitCenter"/>


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClear"
            style="@style/SpecialButton"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/colorBtnEqualBG"
            android:text="AC" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPercentage"
            style="@style/OperatorButton"
            android:layout_row="0"
            android:layout_column="1"
            android:text="%" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDivide"
            style="@style/OperatorButton"
            android:layout_row="0"
            android:layout_column="2"
            android:text="÷" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMultiply"
            style="@style/OperatorButton"
            android:layout_row="0"
            android:layout_column="3"
            android:textAllCaps="false"
            android:text="x" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeven"
            style="@style/NumberButton"
            android:layout_row="1"
            android:layout_column="0"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEight"
            style="@style/NumberButton"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNine"
            style="@style/NumberButton"
            android:layout_row="1"
            android:layout_column="2"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            style="@style/OperatorButton"
            android:layout_row="1"
            android:layout_column="3"
            android:text="-" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFour"
            style="@style/NumberButton"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFive"
            style="@style/NumberButton"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSix"
            style="@style/NumberButton"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            style="@style/OperatorButton"
            android:layout_row="2"
            android:layout_column="3"
            android:text="+" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOne"
            style="@style/NumberButton"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTwo"
            style="@style/NumberButton"
            android:layout_row="3"
            android:layout_column="1"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThree"
            style="@style/NumberButton"
            android:layout_row="3"
            android:layout_column="2"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEqual"
            style="@style/OperatorButton"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:background="@color/colorBtnEqualBG"
            android:text="=" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDoubleZero"
            style="@style/NumberButton"
            android:layout_row="4"
            android:layout_column="0"
            android:text="00" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnZero"
            style="@style/NumberButton"
            android:layout_row="4"
            android:layout_column="1"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDecimal"
            style="@style/NumberButton"
            android:layout_row="4"
            android:layout_column="2"
            android:text="." />
    </GridLayout>
</LinearLayout>